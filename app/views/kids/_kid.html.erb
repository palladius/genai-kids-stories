<div id="<%= dom_id kid %>">
  <p>
    <strong>Name:</strong>
    <%= kid.name %>
  </p>

  <p>
    <strong>Surname:</strong>
    <%= kid.surname %>
  </p>

  <p>
    <strong>Nick:</strong>
    <%= kid.nick %>
  </p>

  <p>
    <strong>Visual description:</strong>
    <%= kid.visual_description %>
  </p>

  <p>
    <strong>Is male:</strong>
    <%= kid.is_male %>
  </p>

  <p>
    <strong>Date of birth:</strong>
    <%= kid.date_of_birth %>
  </p>

  <p>
    <strong>Internal info:</strong>
    <%= kid.internal_info %>
  </p>

  <p>
    <strong>User:</strong>
    <%= kid.user_id %>
  </p>

  <p class='debug'>
    <strong>Avatar info:</strong>
    <%= kid.attached_stuff_info %>
  </p>

</div>
