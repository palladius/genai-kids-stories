
<!-- inside app/views/welcome/index.html.erb -->
<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light"><%= APP_NAME %> v<kbd><%= APP_VERSION %></kbd> </h1>
        <p class="lead text-muted">
          Welcome to a Kids Story generator using <b>GenAI</b> from
          <a href='https://cloud.google.com/vertex-ai/docs/generative-ai/start/quickstarts/api-quickstart' >Google Vertex AI Palm API</a>
        <p>
          <a href="/stories" class="btn btn-primary my-2">All <b><%= @num_stories %></b> Stories</a>
          <a href="https://github.com/palladius/genai-kids-stories" class="btn btn-warning my-2">Code on GitHub</a>
          <a href="/pages/help" class="btn btn-danger my-2">Help + Test AI APIs</a>
          <a href="/translated_stories/<%= @sample_ts.id %>?style=carousel" class="btn btn-success my-2"><b>I'm feeling lucky!</b><br/>
          <small><%=@sample_ts.translated_title %></small></a>
        </p>

        <%= image_tag('A_old_wise_and_fun_storyteller_holding_a_big_red_ge_funny.png',  class: "rounded img-fluid") %>

      </div>
    </div>
  </section>

</main>
